<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.condemn.mapper.OrderTableMapper">

    <resultMap type="OrderTable" id="orderTableResult" autoMapping="true">
        <id property="id" column="id"/>
    </resultMap>

    <select id="getTimeOutOrder" resultMap="orderTableResult">
        SELECT *
        FROM order_table
        WHERE status = 1
          AND create_time &lt; date_add(NOW(), INTERVAL -#{minute} MINUTE);
    </select>

    <update id="updateOrder">
        UPDATE order_table SET status = '0' WHERE id IN
        <foreach collection="orderIdList" item="id" separator="" open=")" close=")">
            #{id}
        </foreach>
    </update>


</mapper>
